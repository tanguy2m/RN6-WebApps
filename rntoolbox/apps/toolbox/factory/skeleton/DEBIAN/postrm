#!/bin/sh
# postrm script for web application

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <r>overwrit>r> <new-version>
# for details, see /usr/share/doc/packaging-manual/

# Parameters definition: APPNAME, mysql, toolbox_version
##PARAMETERS##
. /apps/toolbox/scripts/utils.sh

_log "Postrm called with the following arguments: $@"

case "$1" in

    purge)
		###############################
		#  WEB, CONFIG & SETUP FILES  #
		###############################
		adminSharePath=$(rn_nml -g shares | xmllint --xpath "string(//Share[@share-name='admin']/@id)" -)
		rm -Rf /$adminSharePath/config/$APPNAME /$adminSharePath/setup/$APPNAME /apps/$APPNAME || exit 1

		###########################
		#         MYSQL           #
		###########################
		if [ "$mysql" = true ] ; then
			/apps/toolbox/scripts/mysql.sh remove $APPNAME $toolbox_version || exit 1
		fi

		systemctl restart apache2.service
		event_push app readynasd '<delete-s resource-type="LocalApp" resource-id="LocalApp"><LocalApp appname="$APPNAME" success="1"></delete-s>' 0 0
	;;

	remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
	;;

	*)
		_log "postrm called with unknown argument '$1'"
		exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
